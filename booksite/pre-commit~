#!/bin/bash
DBUSER="root"
DBPASS=""
DB="testdjango"
NEWDB="djdb"
SCHMEAPATH="/Users/taiowawaner/Documents/test_django/booksite"
MYSQLREPOSITORY="/usr/local/mysql/data"
GITREPOSITORY="/Users/taiowawaner/Documents/test_django/booksite/db"
export PATH=${PATH}:/usr/local/mysql/bin

# GO TIME

#BACKUP
mysqldump -u $DBUSER -p$DBPASS $DB > $NEWDB
#COPY
cp -R  $MYSQLREPOSITORY/$NEWDB.sql $GITREPOSITORY/

#GIT IT
#git add $GITREPOSITORY/$NEWDB.sql
exit 0

